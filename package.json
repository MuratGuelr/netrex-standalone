{
  "name": "netrex",
  "version": "3.0.0",
  "description": "Secure Desktop Voice Chat Application",
  "homepage": "./",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "node scripts/fix-electron-paths.js",
    "preelectron-pack": "node scripts/copy-env.js",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "node scripts/copy-env.js && concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "release": "npm run build && electron-builder --publish always"
  },
  "build": {
    "appId": "com.netrex.app",
    "productName": "Netrex",
    "publish": [
      {
        "provider": "github",
        "owner": "MuratGuelr",
        "repo": "netrex-standalone"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "public/logo.ico",
        "to": "logo.ico"
      },
      {
        "from": "public/logo.png",
        "to": "logo.png"
      },
      {
        "from": "public/rnnoise.wasm",
        "to": "rnnoise.wasm"
      },
      {
        "from": "public/rnnoise.worklet.js",
        "to": "rnnoise.worklet.js"
      }
    ],
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/logo.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "@livekit/components-react": "latest",
    "@livekit/components-styles": "latest",
    "@livekit/track-processors": "^0.6.1",
    "dotenv": "^16.3.1",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "firebase": "^11.0.2",
    "framer-motion": "^12.23.26",
    "livekit-client": "latest",
    "livekit-server-sdk": "latest",
    "lucide-react": "^0.300.0",
    "next": "^14.2.16",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "simple-rnnoise-wasm": "^1.1.0",
    "sonner": "^2.0.7",
    "uiohook-napi": "^1.1.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "latest",
    "electron-builder": "latest",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "wait-on": "^7.2.0"
  }
}
